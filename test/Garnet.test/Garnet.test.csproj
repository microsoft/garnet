	</ItemGroup>

  <ItemGroup>
	  <EmbeddedResource Include="..\..\libs\host\defaults.conf" Link="defaults.conf" />
	  <None Include="..\testcerts\testcert.pfx" Link="testcert.pfx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
